<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Book house - Online Bookstore</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
  <style>
    .swiper {
      width: 80%;
      height: 300px;
    }
  </style>
</head>

<body>

  <div class="container">
    <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
      <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
        <svg class="bi me-2" width="40" height="32">
          <use xlink:href="#bootstrap"></use>
        </svg>
        <span class="fs-4">Simple header</span>
      </a>

      <ul class="nav nav-pills">
        <li class="nav-item"><a href="#" class="nav-link active" aria-current="page">Home</a></li>
        <li class="nav-item"><a href="#" class="nav-link">Features</a></li>
        <li class="nav-item"><a href="#" class="nav-link">Pricing</a></li>
        <li class="nav-item"><a href="#" class="nav-link">FAQs</a></li>
        <li class="nav-item"><a href="#" class="nav-link">About</a></li>
      </ul>
    </header>

    <main>
      <div class="swiper">
        <div class="swiper-wrapper">
            <% books.forEach(book => { %>
                <div class="swiper-slide d-flex flex-column align-items-center">
                    <img src="<%= book.imgUrl %>" alt="<%= book.bookName %>" class="img-fluid" style="height: 200px; object-fit: contain;">
                    <p class="mt-2 fw-bold text-center"><%= book.bookName %></p>
                    <p class="text-success fw-bold">₹<%= book.finalPrice %></p>
                </div>
            <% }); %>
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>`
    </div>
    
  
      <h4 class="text-center fw-semibold fs-2 mt-5">Suggested for you!</h4>
  
      <div class="row g-4 mt-3">
          <% books.forEach(book => { 
              let tag = book.tags.includes('bestseller') ? 'bestseller' : book.tags[0] || ''; // Prioritize bestseller
          %>
              <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                  <div class="card h-100 shadow-sm position-relative">
                      <!-- Badge (Top Right) -->
                      <% if (tag) { %>
                          <span class="badge bg-<%= tag === 'bestseller' ? 'warning text-dark' : 'primary' %> position-absolute top-0 end-0 m-2">
                              <%= tag.charAt(0).toUpperCase() + tag.slice(1) %> <!-- Capitalize first letter -->
                          </span>
                      <% } %>
  
                      <!-- Book Image -->
                      <img src="<%= book.imgUrl %>" class="card-img-top p-2" alt="Book Cover" style="height: 250px; object-fit: contain;">
  
                      <div class="card-body">
                          <!-- Book Name -->
                          <h6 class="card-title fw-bold text-truncate"><%= book.bookName %></h6>
                          
                          <!-- Author -->
                          <p class="text-muted small mb-1">by <%= book.author %></p>
                          
                          <!-- Prices -->
                          <p class="mb-1">
                              <span class="text-danger text-decoration-line-through me-2">₹<%= book.actualPrice %></span>
                              <span class="text-success fw-bold">₹<%= book.finalPrice %></span>
                          </p>
  
                          <!-- Action Buttons -->
                          <div class="d-grid gap-2">
                              <button class="btn btn-sm btn-outline-primary">Add to Cart</button>
                              <button class="btn btn-sm btn-primary">Buy Now</button>
                          </div>
                      </div>
                  </div>
              </div>
          <% }); %>
      </div>
  </main>
  
  
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>

  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

  <script type="module">
    import Swiper from 'https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.mjs'

    const swiper = new Swiper('.swiper', {
      // Optional parameters
      direction: 'horizontal',
      loop: true,

      // If we need pagination
      pagination: {
        el: '.swiper-pagination',
      },

      // Navigation arrows
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },

      // And if we need scrollbar
      scrollbar: {
        el: '.swiper-scrollbar',
      },
    });
  </script>
</body>

</html>